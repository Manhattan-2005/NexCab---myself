<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.nexcab.CustomerHomePage"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_rides"
        android:name="com.example.nexcab.ui.rides.RideFragment"
        android:label="Rides"
        tools:layout="@layout/fragment_ride" />

    <fragment
        android:id="@+id/navigation_inbox"
        android:name="com.example.nexcab.ui.inbox.NotificationsFragment"
        android:label="Inbox"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.nexcab.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

    <!-- for Driver  -->
    <fragment
        android:id="@+id/driver_dashboard"
        android:name="com.example.nexcab.driver.DriverDashboard"
        android:label="DriverDashboard"
        tools:layout="@layout/fragment_driver_dashboard" />

    <fragment
        android:id="@+id/driver_rides"
        android:name="com.example.nexcab.driver.DriverRides"
        android:label="DriverDashboard"
        tools:layout="@layout/fragment_driver_rides" />

</navigation>