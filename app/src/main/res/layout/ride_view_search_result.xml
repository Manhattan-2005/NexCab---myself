<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corner_background"
    android:layout_marginVertical="20dp"
    android:layout_marginHorizontal="40dp">

    <!--    <ImageView-->
    <!--        android:id="@+id/segmentImage"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="50dp"-->
    <!--        android:src="@drawable/linesegment"-->
    <!--        app:layout_constraintEnd_toEndOf="parent"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        app:layout_constraintTop_toTopOf="parent" />-->

    <LinearLayout
        android:id="@+id/ridviewLinearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pickupTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:padding="10dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/dropoffTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:gravity="end"
            android:padding="10dp"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:paddingHorizontal="10dp"
        android:textSize="20sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/driverNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:paddingHorizontal="10dp"
        android:textSize="20sp"
        android:visibility="gone"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/rideFullTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:textColor="@color/red"
        android:paddingHorizontal="10dp"
        android:textSize="20sp"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/join_ride_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join Ride"
        android:layout_margin="10dp"
        android:paddingHorizontal="10dp"
        android:visibility="gone"
        />

</LinearLayout>